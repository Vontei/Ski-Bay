extends layout

block content

  div.padd
    h1 Seller: #{user.user_name}
    h4 Items for sale:
    div.row
    each val in info
      div.col-lg-4.clearfix
        a(href='/show/' + val._id ,class="thumbnail" )
          img(src=val.image_path alt=val.name)
        div.caption.clearfix
          h3= val.name
          p= val.size
          p.desc= val.description
  div.tile
      
